@*@model IEnumerable<Model.EF.TaiKhoan>*@
@model PagedList.IPagedList<Model.EF.TaiKhoan>
@using PagedList.Mvc;

@{
    ViewBag.Title = "DanhSachTaiKhoan";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

<h2>DanhSachTaiKhoan</h2>



<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>
                    MaTK
                </th>
                <th>
                    Tài Khoản
                </th>
                <th>
                    Mật Khẩu
                </th>
                <th>
                    Mã Quyền
                </th>
                <th>
                    Họ Tên
                </th>
                <th>
                    Ngày Sinh
                </th>
                <th>
                    Giới Tính
                </th>
                <th>
                    Trạng Thái
                </th>
                <th> Thao Tác</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaTK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaiKhoan1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MatKhau)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaQuyen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GioiTinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrangThai)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaTK }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaTK }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaTK })
                    </td>
                </tr>
            }

        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

    </div>
    <p>
        @Html.ActionLink("Create New", "Them")
    </p>
</div>