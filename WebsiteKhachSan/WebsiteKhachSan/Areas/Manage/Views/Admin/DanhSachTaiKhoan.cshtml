@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;

@{
    ViewBag.Title = "DanhSachTaiKhoan";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

<h2>DanhSachTaiKhoan</h2>



<div class="panel-body">
    @using (Html.BeginForm("DanhSachTaiKhoan", "Admin", FormMethod.Get))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-offset-0">
                    <input type="text" name="searchString" value="@ViewBag.ChuoiTimKiem" />
                    <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>
                    MaTK
                </th>
                <th>
                    Tài Khoản
                </th>
                <th>
                    Mật Khẩu
                </th>
                <th>
                    Mã Quyền
                </th>
                <th>
                    Họ Tên
                </th>
                <th>
                    Ngày Sinh
                </th>
                <th>
                    Giới Tính
                </th>
                <th>
                    Trạng Thái
                </th>
                <th> Thao Tác</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaTK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaiKhoan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MatKhau)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaQuyen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GioiTinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrangThai)
                    </td>
                    <td>
                        @Html.ActionLink("Sua","Sua", new { id = @item.MaTK }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaTK }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaTK })
                    </td>
                </tr>
            }

        </table>
       <center> @Html.PagedListPager(Model, page => Url.Action("DanhSachTaiKhoan", new { page, @searchString = @ViewBag.ChuoiTimKiem }))</center>


    </div>
</div>